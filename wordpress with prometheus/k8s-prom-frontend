# https://kubernetes.io/docs/concepts/workloads/controllers/deployment/
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: wordpress
    environment: development
    tier: frontend
  name: wordpress-frtnd
  namespace: default
  annotations:
    prometheus.io/scrape: "true"
spec:
  selector:
    matchLabels:
      app: wordpress
      environment: development
      tier: frontend
  replicas: 2
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: wordpress
        environment: development
        tier: frontend
    spec:
      # initContainers:
        # Init containers are exactly like regular containers, except:
          # - Init containers always run to completion.
          # - Each init container must complete successfully before the next one starts.
      containers:
      - name: wordpress
        image: wordpress:php8.3-apache
        imagePullPolicy: IfNotPresent
        # resources:
        #   requests:
        #     cpu: 100m
        #     memory: 100Mi
        #   limits:
        #     cpu: 100m
        #     memory: 100Mi
        livenessProbe:
          tcpSocket:
            port: 80
          initialDelaySeconds: 5
          timeoutSeconds: 5
          successThreshold: 1
          failureThreshold: 3
          periodSeconds: 10
        # readinessProbe:
        #   httpGet:
        #     path: /_status/healthz
        #     port: 80
        #   initialDelaySeconds: 5
        #   timeoutSeconds: 2
        #   successThreshold: 1
        #   failureThreshold: 3
        #   periodSeconds: 10
        env:
        - name: WORDPRESS_DB_HOST
          value: "wordpress-bknd-svc"
        - name: WORDPRESS_DB_USER
          value: "vishnu"
        - name: WORDPRESS_DB_PASSWORD
          value: "Oct@2024"
        - name: WORDPRESS_DB_NAME
          value: "wordpress"
        #   valueFrom:
        #     configMapKeyRef:
        #       name: myjob
        #       key: DB_HOST
        # - name: DB_HOST
        #   valueFrom:
        #     secretKeyRef:
        #       name: myjob
        #       key: MSSQL_SA_PASSWORD
        ports:
        - containerPort: 80
          # name: myjob
      #   volumeMounts:
      #   - name: localtime
      #     mountPath: /etc/localtime
      # volumes:
      #   - name: localtime
      #     hostPath:
      #       path: /usr/share/zoneinfo/Asia/Taipei
      restartPolicy: Always
---

# https://kubernetes.io/docs/concepts/services-networking/service/
apiVersion: v1
kind: Service
metadata:
  name: wordpress-frtnd-svc
  namespace: default
spec:
  selector:
    app: wordpress
    environment: development
    tier: frontend
  type: NodePort
  ports:
  - name: wordpress
    protocol: TCP
    port: 8080 #service port
    targetPort: 80 #container port
    nodePort: 30001 #hostport
---

# https://kubernetes.io/docs/concepts/services-networking/ingress/
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: wordpress-ingress
  namespace: default
  # https://kubernetes.github.io/ingress-nginx/examples/rewrite/
  # annotations:
  #   nginx.ingress.kubernetes.io/rewrite-target: /$1
spec:
  rules:
  - http:
      paths:
      - path: /demo
        pathType: Prefix
        backend:
          service:
            name: wordpress-frtnd-svc
            port:
              number: 8080
# ---

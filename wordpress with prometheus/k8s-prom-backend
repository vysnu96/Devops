          value: "n7jYL867"
        # - name: DB_HOST
        #   valueFrom:
        #     configMapKeyRef:
        #       name: myjob
        #       key: DB_HOST
        # - name: DB_HOST
        #   valueFrom:
        #     secretKeyRef:
        #       name: myjob
        #       key: MSSQL_SA_PASSWORD
        ports:
        - containerPort: 80

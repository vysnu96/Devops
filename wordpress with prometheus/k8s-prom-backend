# https://kubernetes.io/docs/concepts/services-networking/service/
apiVersion: v1
kind: Service
metadata:
  name: wordpress-bknd-svc
  namespace: default
spec:
  selector:
    app: wordpress
    environment: development
    tier: backend
  type: ClusterIP
  ports:
  - name: wordpress
    protocol: TCP
    port: 3306 #service port
    targetPort: 3306 #container port
---

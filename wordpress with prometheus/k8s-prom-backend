# https://kubernetes.io/docs/concepts/workloads/controllers/deployment/
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: wordpress
    environment: development
    tier: backend
  name: wordpress-bknd
  namespace: default
  annotations:
    prometheus.io/scrape: "true"
spec:
  selector:
    matchLabels:
      app: wordpress
      environment: development
      tier: backend
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: wordpress
        environment: development
        tier: backend
    spec:
      # initContainers:
        # Init containers are exactly like regular containers, except:
          # - Init containers always run to completion.
          # - Each init container must complete successfully before the next one starts.
      containers:
      - name: mysql
        image: mysql:8.0
        imagePullPolicy: IfNotPresent
        # resources:
